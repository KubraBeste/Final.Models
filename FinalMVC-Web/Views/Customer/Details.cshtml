@using System.Activities.Statements
@using System.Runtime.Remoting.Messaging
@model Final.Models.Concretes.Kullanici
@{
    Layout = null;
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerSurname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerSurname)
        </dd>
    </dl>
</div>
<div>
    <h4>Kiralama-Teslim</h4>
    <hr />
    @foreach (var item in Model.Kiralama)
    {
        if (Model.CustomerID == item.KiralayanKisi)
        {
            <dl class="dl-horizontal">
                <dt>
                    @Html.Raw("Kiralanan Arac ")
                </dt>
                <dd>
                    @Html.Raw(item.KiralananArac)

                </dd>
                <dt>
                    @Html.Raw("Kiralama Tarihi")
                </dt>
                <dd>
                    @Html.Raw(item.KiralamaTarih.ToLongDateString() + "" + item.KiralamaTarih.ToLongTimeString())
                </dd>
            </dl>
        }

    }
    @foreach (var item in Model.Teslim)
    {
        if (Model.CustomerID == item.TeslimEdenKisi)
        {
            <dl class=" dl-horizontal">
                <dt>
                    @Html.Raw("Teslim Edilen Arac")
                </dt>
                <dd>
                    @Html.Raw(item.TeslimEdilenArac)
                </dd>
                <dt>
                    @Html.Raw("Teslim Tarihi")
                </dt>
                <dd>
                    @Html.Raw(item.TeslimTarihi.ToLongDateString() + "" + item.TeslimTarihi.ToLongTimeString())
                </dd>
                <dt>
                    @Html.Raw("Odeme")
                </dt>
                <dd>
                    @Html.Raw(item.Odeme)
                </dd>
            </dl>
        }
    }


</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerID }) |
    @Html.ActionLink("Back to List", "ListAll")
</p>